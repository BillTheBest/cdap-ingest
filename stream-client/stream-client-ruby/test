# build gem
gem build cdap-stream-client.gemspec

# install gem from gem file
gem install --local cdap-stream-client-0.1.gem

# run tests
ruby tests/test_stream_client.rb
ruby tests/test_stream_writer.rb

# uninstall gem
gem uninstall cdap-stream-client

# remove gem file
rm cdap-stream-client-0.1.gem
